      align-items: center;
      gap: 10px;
    }

    .quantity-control button {
      background: #000000;
      color: #fff;
      border: none;
      padding: 6px 12px;
      font-size: 18px;
      cursor: pointer;
      border-radius: 5px;
      transition: background 0.3s ease;
    }

    .quantity-control button:hover {
      background: #1d4ed8;
    }

    .quantity-number {
      width: 45px;
      text-align: center;
      font-size: 16px;
      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .total-price {
      font-weight: bold;
      margin-bottom: 20px;
      font-size: 18px;
      color: #ffffff;
    }

    .wishlist-btn,
    .add-cart-btn {
      padding: 10px;
      border-radius: 6px;
      text-align: center;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.2s;
      font-weight: bold;
    }

    .wishlist-btn:hover,
    .add-cart-btn:hover {
      transform: scale(1.05);
    }

    .wishlist-btn {
      background: #ffffff;
      color: #000000;
    }

    .add-cart-btn {
      background: #ffffff;
      color: #000000;
      border: #2563eb;
      font-weight: bold;
      margin-top: 10px;
    }

    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }

      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .button-group {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-top: 20px;

    }

    .wishlist-btn,
    .add-cart-btn {
      padding: 15px;
      /* Make buttons bigger */
      font-size: 18px;
      /* Bigger text */
      border-radius: 8px;
      text-align: center;
      cursor: pointer;
      transition: transform 0.2s;
      width: 100%;
      /* Stretch full width of container */
      max-width: 450px;
      /* Optional: limit button width */
      margin: 0 auto;
      /* Center the buttons */
    }

