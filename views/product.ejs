  <script>
    const priceElement = document.getElementById("price");
    const priceText = priceElement.textContent.trim(); // "₹2999"
    const numericPrice = parseFloat(priceText.replace(/[^\d.]/g, '')); // 2999
    console.log(numericPrice);

    async function addToCart(productId) {
      const quantity = parseInt(document.getElementById('qty').value);
      console.log("Add to Cart clicked for product:", productId);
      // You can implement a fetch POST request to /cart here
      const response = await fetch("/cart?json=true", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({ productId, quantity })
      });
      const responseBody = await response.json()
      showPopup(responseBody.msg)
      if (responseBody.redirect) {
        window.location.href = responseBody.redirect;
      }
      // console.log(responseBody.msg)
      // showPopup(responseBody.msg)
    }

    function showPopup(message, duration = 3000) {
      const popup = document.getElementById('top-popup');
      if (!popup) return;

      console.log("Popup element:", popup);
      console.log("Message to show:", message);
      popup.textContent = message;
      popup.style.display = 'block';
      popup.style.opacity = '1';

      clearTimeout(popup.hideTimeout);
      popup.hideTimeout = setTimeout(() => {
        popup.style.opacity = '0';
        setTimeout(() => {
          popup.style.display = 'none';
        }, 400);
      }, duration);
    }

    async function buyNow(productId) {
      const quantity = parseInt(document.getElementById('qty').value);
      console.log("quantity", quantity)
      if (!productId || productId === "undefined") {
        console.error("Invalid product ID passed to fetch!");
        return;
      }

      window.location.href = `/buyNow/${productId}?quantity=${quantity}`;
    }

    function updateQty(val) {
      let qtyInput = document.getElementById('qty');
      let qty = parseInt(qtyInput.value) + val;
      qty = Math.max(1, qty);
      qtyInput.value = qty;
      calcPrice();
    }

    function calcPrice() {
      const qty = parseInt(document.getElementById('qty').value);
      document.getElementById('total').innerText = "Total: ₹" + (qty * numericPrice).toLocaleString();
    }

    function showTab(tabId) {
      document.querySelectorAll('.tab-menu span').forEach(el => el.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
      document.querySelector(`.tab-menu span[onclick*="${tabId}"]`).classList.add('active');
      document.getElementById(tabId).classList.add('active');
    }

    function toggleReadMore(elem) {
      const moreText = elem.nextElementSibling;
      if (moreText.style.display === "none") {
        moreText.style.display = "inline";
        elem.innerText = "Read less";
      } else {
        moreText.style.display = "none";
        elem.innerText = "Read more";
      }
    }

    function changeImage(thumb) {
      document.getElementById("main-image").src = thumb.src;
    }

    document.getElementById('reviewForm').addEventListener('submit', function (e) {
      e.preventDefault();

      const name = "Guest User";
      const text = document.getElementById('reviewText').value.trim();
      const rating = document.querySelector('input[name="rating"]:checked');

      if (name && text && rating) {
        const stars = '★'.repeat(rating.value) + '☆'.repeat(5 - rating.value);

        const newReview = document.createElement('div');
        newReview.classList.add('review');
        newReview.innerHTML = `
  <div class="review-header">
    <strong><span class="user-icon">👤</span> ${name}</strong>
    <span class="inline-stars">${stars}</span>
  </div>
  <p>${text}</p>`;


        document.getElementById('newReviews').prepend(newReview);

        // Clear form
        document.getElementById('reviewForm').reset();
      } else {
        alert("Please fill out all fields and select a rating.");
      }
    });

    document.getElementById('stock').innerText = `Only ${product.stock} left in stock!`;



  </script>
