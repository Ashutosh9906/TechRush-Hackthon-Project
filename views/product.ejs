    .container {
      max-width: 1000px;
      margin: auto;
      background: #ffffff;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
      padding: 40px 30px 60px;
      min-height: 700px;
      border-radius: 20px;
      transition: 0.3s ease-in-out;
        /* Styling */
    background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
