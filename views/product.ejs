    .image-slider {
      display: flex;
      gap: 15px;
      justify-content: center;
      margin-bottom: 25px;
    }

    .image-slider img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 10px;
      cursor: pointer;
      border: 2px solid transparent;
      transition: transform 0.3s, border-color 0.3s;
    }

    .image-slider img:hover {
      transform: scale(1.1) rotate(3deg);
      border-color: #3b82f6;
    }

    .product-section {
      display: flex;
      gap: 30px;
      flex-wrap: wrap;
    }

    .left {
      flex: 1 1 300px;
      display: flex;
      justify-content: center;
    }

    .left img {
      width: 100%;
      max-width: 400px;
      border-radius: 20px;
      border: 2px solid #000000;
      transition: transform 0.3s ease;
    }

    .left img:hover {
      transform: scale(1.05);
    }

    .right {
      flex: 1 1 300px;
      display: flex;
      flex-direction: column;
    }

    .category {
      font-size: 13px;
      color: #000000;
      margin-bottom: 5px;
      text-transform: uppercase;
      font-weight: bold;
    }

    .title {
      font-size: 32px;
      font-weight: bold;
      color: #ffffff;
      animation: fadeInUp 0.5s ease-in-out;
    }

    .subtitle {
      color: #000000;
      margin-bottom: 10px;
    }

    .price {
      font-size: 26px;
      color: #ffffff;
      font-weight: bold;
      margin-bottom: 15px;
    }

    .tab-menu {
      display: flex;
      gap: 20px;
      margin: 20px 0 10px;
    }

    .tab-menu span {
      cursor: pointer;
      font-size: 16px;
      color: #ffffff;
      transition: all 0.3s ease;
      border-bottom: 2px solid transparent;
    }

    .tab-menu span:hover,
    .tab-menu span.active {
      color: #000000;
      border-bottom: 3px solid #2563eb;
      font-weight: bold;
    }

    .tab-content {
      display: none;
      color: #333;
      font-size: 15px;
      line-height: 1.6;
      margin-bottom: 20px;
    }

    .tab-content.active {
      display: block;
      animation: fadeInUp 0.5s ease;
    }

    .read-more {
      color: #000000;
      cursor: pointer;
      display: inline-block;
      margin-top: 8px;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .read-more:hover {
      color: #000000;
    }

    .options {
      display: flex;
      align-items: center;
      gap: 20px;
      margin-bottom: 20px;
    }

    .quantity-control {
