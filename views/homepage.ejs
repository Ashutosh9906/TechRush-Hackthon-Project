        *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
:root{
    --color_I: #f2e6ee;
    --color_II: #977dff;
    --color_V: #977dff;
    --color_VI: #ffccf2;
    --color_III: #0033ff;
    --color_IV: #0600ab;
    --color_VII: #00003d;
    --secsolor_I: #ffa930;
}
body{
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background: linear-gradient(120deg,var(--color_III),var(--color_VI));
    color: black;
    min-height: 100vh;
    line-height: 1.5;
    background: linear-gradient(120deg, var(--color_III), var(--color_II), var(--color_VI));
    background-size: 200% 200%; /* Make the background larger than the viewport */
    animation: gradientDrift 15s ease infinite; /* Apply the animation */
}
@keyframes gradientDrift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}
/* Noise Overlay */
body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Tiny random dots */
    background-image: 
        radial-gradient(rgba(0, 0, 0, 0.12) 1px, transparent 0);

    background-size: 3px 3px; /* density of dots */
    opacity: 0.9; /* how visible the grain is */
    pointer-events: none; /* lets clicks pass through */
    z-index: -1;
}

/* glowing effect around the gradient */
.layerblur{
    height: 0;
    width: 20rem;
    position: absolute;
    top: 85%;
    right: 20%;
    box-shadow: 0 0 100px 15px black ;
    z-index: -1;
}
/* Main container for the dropdown */
.dropdown {
    position: relative;
    display: inline-block; /* Keeps elements contained */
    z-index: 999;
}

/* The dropdown menu - hidden by default */
.dropdown-content {
    /* Hiding properties */
    visibility: hidden;
    opacity: 0;
    
    /* Positioning */
    position: absolute;
    top: 100%; /* Position it right below the CATEGORIES link */
    left: 50%;
    transform: translateX(-50%); /* Center the dropdown */
    z-index: 1000;

    /* Styling */
    background: rgba(255, 255, 255, 0.15); /* Glass effect */
    backdrop-filter: blur(10px);
    min-width: 220px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    padding: 0.5rem 0;
    
    /* Animation */
    transition: opacity 0.3s ease, visibility 0.3s ease;
}

/* Style the links inside the dropdown */
.dropdown-content a {
    color: white; /* Or your desired text color */
    padding: 12px 16px;
    text-decoration: none;
    display: block; /* Makes the entire area clickable */
    text-align: left;
    transition: background-color 0.2s ease;
}

/* Change color of dropdown links on hover */
.dropdown-content a:hover {
    background-color: rgba(255, 255, 255, 0.2);
    color: black;
}

/* Show the dropdown menu on hover */
.dropdown:hover .dropdown-content {
    visibility: visible;
    opacity: 1;
}
.container{
    width: 100%;
    margin: 0 auto;
    padding: 0;
    position: relative;
    overflow: hidden;
}
header{
    display: flex;
    justify-content: space-between;
