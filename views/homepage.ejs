        <button id="scroll-left-btn" class="scroll-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
        </button>
        <button id="scroll-right-btn" class="scroll-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
        </button>
    </div>
    </section>
    <script>
        // Get the necessary elements from the DOM
        const scrollContainer = document.querySelector(".product-scroll-container");
        const leftBtn = document.getElementById("scroll-left-btn");
        const rightBtn = document.getElementById("scroll-right-btn");

        // Define how much to scroll on each click
        const scrollAmount = 300; // You can adjust this value

        // Add click event listener for the right button
        rightBtn.addEventListener("click", () => {
            scrollContainer.scrollBy({
                left: scrollAmount,
                behavior: "smooth"
            });
        });

        // Add click event listener for the left button
        leftBtn.addEventListener("click", () => {
            scrollContainer.scrollBy({
                left: -scrollAmount,
                behavior: "smooth"
            });
        });
    </script>
</body>

