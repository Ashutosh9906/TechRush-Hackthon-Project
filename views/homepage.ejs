/* text behind image and border in front effect */
.title-over-headphones h1{
    position: relative;
    top: -50px;
    font-size: 4rem;
    text-align: center;
    font-weight: 800;
    letter-spacing: 0.12rem;
    margin: 0.4rem 0;
    line-height: 1.2;
    color: var(--color_VII);
}
.title-over-headphones h1::after{
    position: absolute;
    inset: 0 0 0 0; /*aligns the solid text and border perfectly*/
    content: attr(data-content);
    -webkit-text-stroke: 2px var(--color_VII); /*border color*/
    z-index: 3; /*z index higher than image and text to keep it in the front*/
    color: transparent; /*makes the text transparent and alone border is visible*/
}
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
